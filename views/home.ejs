<!DOCTYPE html>

<html>
    <head>

        <%- include("partials/header.ejs"); %>

        <!-- slider -->
        <link href="assets/nouislider.min.css" rel="stylesheet">
        <script src="assets/nouislider.min.js"></script>

        <!-- color picker -->
        <script src="https://cdn.jsdelivr.net/npm/@jaames/iro@5"></script>

        <title>Dashboard</title>

        <link
        rel="stylesheet"
        href="https://unpkg.com/swiper@7/swiper-bundle.min.css"
        />

        <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

    </head>

    <body onload="getGroups();">

        <div id="sceneSaver">

            <div class="input-wrapper">
                <label for="sceneNameInput">give it a name</label>
                <input type="text" name="" id="sceneNameInput" placeholder="scene name" required>
            </div>

            <button id="sceneFinishBtn" onclick="saveCurrentScene(this);" anim="ripple" class="btn btn-primary">Done</button>
            <button onclick="closeSceneOverlay();" anim="ripple" class="btn btn-primary btn-abort">Abort</button>
            
        </div>

        <div id="colorPicker">
            <h2 id="colorPickerLightName">Light_name</h2>
            <div id="picker"></div>

            <button onclick="closeOverlay();" anim="ripple" class="btn btn-primary">Done</button>
        </div>

        <div id="GroupScreen">
            <div class="GroupScreenTitle">
                <h2>Group_name</h2>

                <h1>Devices</h1>
                <div id="GroupScreenLights">

                </div>

                <h1 class="sectionHeader">Scenes 
                    <button class="btn btn-primary saveSceneBtn" anim="ripple" onclick="sceneOverlay(this)" data-friendlyname="all" >Save Current</button>
                </h1>
                <div id="GroupScreenScenes">

                </div>
            </div>
        </div>

        <div id="colorOverlay" onclick="closeOverlay();"></div>

        <div class="title">
            <h1>Dashboard</h1>
            <%- include("partials/menu.ejs"); %>
        </div>


        <h1 class="sectionHeader">last used</h1>
        <div id="lastUsed" class="swiper">
            <div class="swiper-wrapper"></div>
        </div>

        <h1 class="sectionHeader">Groups</h1>
        <div id="groups"></div>

        <h1 class="sectionHeader">Scenes 
            <button class="btn btn-primary" anim="ripple" onclick="sceneOverlay(this)" data-friendlyname="all" >Save Current</button>
        </h1>
        <div id="scenes" class="swiper">
            <div class="swiper-wrapper"></div>
        </div>


        <script src="/scripts/scenes.js" async defer></script>
        <script src="/scripts/sliders.js" async defer></script>
        <script src="/scripts/main.js"  async defer></script>
        <script src="/scripts/lights.js" async defer></script>
        <script src="/scripts/ripple.js" async defer></script>
        <script src="/scripts/lightcardComponent.js" async defer></script>

    </body>
</html>